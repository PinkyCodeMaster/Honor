{
    "name": "api",
    "type": "module",
    "version": "0.0.1",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc && tsc-alias",
        "start": "node ./dist/src/index.js",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "npm run lint --fix",
        "test": "cross-env NODE_ENV=test vitest",
        "auth:generate": "pnpx @better-auth/cli generate --output ./src/db/schema/auth.ts",
        "stripe:listen": "stripe listen --forward-to localhost:9000/api/auth/stripe/webhook",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "db:update": "pnpm db:generate && pnpm db:migrate && pnpm db:push"
    },
    "dependencies": {
        "@better-auth/stripe": "^1.2.8",
        "@hono/node-server": "^1.14.3",
        "@hono/zod-openapi": "^0.18.4",
        "@libsql/client": "^0.14.0",
        "@scalar/hono-api-reference": "^0.5.184",
        "better-auth": "^1.2.8",
        "dotenv": "^16.4.7",
        "dotenv-expand": "^12.0.1",
        "drizzle-orm": "^0.33.0",
        "drizzle-zod": "^0.5.1",
        "hono": "^4.7.10",
        "hono-pino": "^0.7.2",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "resend": "^4.5.1",
        "stoker": "1.4.2",
        "stripe": "^18.2.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^3.16.0",
        "@types/node": "^22.13.10",
        "cross-env": "^7.0.3",
        "drizzle-kit": "^0.24.2",
        "eslint": "^9.22.0",
        "eslint-plugin-format": "^0.1.3",
        "tsc-alias": "^1.8.11",
        "tsx": "^4.7.1",
        "typescript": "^5.8.3",
        "vitest": "^2.1.9"
    }
}
